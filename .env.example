# FranklinCovey Coaching Platform
# Base template. Copy to .env.local for local development.
# For hosted deployments, use .env.staging.example and .env.production.example.

# ---------------------------------------------------------------------------
# Environment identity
# ---------------------------------------------------------------------------
NEXT_PUBLIC_APP_ENV=staging
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ---------------------------------------------------------------------------
# Database (Supabase PostgreSQL for hosted envs)
# ---------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/franklincovey
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ---------------------------------------------------------------------------
# Auth/session
# ---------------------------------------------------------------------------
AUTH_SECRET=
MAGIC_LINK_TTL_MINUTES=30

# ---------------------------------------------------------------------------
# Email safety
# ---------------------------------------------------------------------------
RESEND_API_KEY=
EMAIL_FROM=
EMAIL_MODE=sandbox
EMAIL_ALLOWLIST=
EMAIL_OUTBOUND_ENABLED=false

# ---------------------------------------------------------------------------
# Cron + operational safety
# ---------------------------------------------------------------------------
NUDGE_CRON_ENABLED=false
CRON_SECRET=
LOG_REDACTION_ENABLED=true

# ---------------------------------------------------------------------------
# Test endpoint safety (/api/test/*)
# NOTE: Vercel sets NODE_ENV=production in both staging and production deploys.
# Use TEST_ENDPOINTS_ENABLED (not NODE_ENV) to control test-only routes.
# ---------------------------------------------------------------------------
TEST_ENDPOINTS_ENABLED=false
TEST_ENDPOINTS_SECRET=
