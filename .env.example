# FranklinCovey Coaching Platform
# Base template. Copy to .env.local for local development.
# For hosted deployments, use .env.staging.example and .env.production.example.

# ---------------------------------------------------------------------------
# Environment identity
# ---------------------------------------------------------------------------
NEXT_PUBLIC_APP_ENV=staging
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ---------------------------------------------------------------------------
# Database (Supabase PostgreSQL for hosted envs)
# ---------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/franklincovey
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ---------------------------------------------------------------------------
# Auth/session
# ---------------------------------------------------------------------------
AUTH_SECRET=
OTP_TTL_MINUTES=10
OTP_RESEND_COOLDOWN_SEC=60
OTP_MAX_ATTEMPTS=5
MAGIC_LINK_TTL_MINUTES=30

# ---------------------------------------------------------------------------
# Email safety
# ---------------------------------------------------------------------------
RESEND_API_KEY=
EMAIL_FROM=
EMAIL_MODE=sandbox
EMAIL_ALLOWLIST=

# ---------------------------------------------------------------------------
# Cron + operational safety
# ---------------------------------------------------------------------------
NUDGE_CRON_ENABLED=false
CRON_SECRET=
LOG_REDACTION_ENABLED=true
