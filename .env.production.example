AUTH_SECRET=[PRODUCTION_UNIQUE_SECRET]
MAGIC_LINK_TTL_MINUTES=30

RESEND_API_KEY=[PRODUCTION_KEY]
EMAIL_FROM=coaching@coachinginnovationlab.com
EMAIL_MODE=live
EMAIL_ALLOWLIST=
EMAIL_OUTBOUND_ENABLED=true

NUDGE_CRON_ENABLED=true
CRON_SECRET=[PRODUCTION_UNIQUE_SECRET]
